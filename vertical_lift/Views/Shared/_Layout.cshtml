    <script>
        $(document).ready(function () {
            $("input").attr("autocomplete", "off")
            /*data table*/
            $('#example').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });


            /* toggle button*/
            $("#toggle-btn").click(function () {
                $("#sidebar").toggleClass("collapsed");
                /*  $("#fa-arrow-left").addClass("highlight");*/
            });


            /*dropdown slide down*/
            $(".dropdown > a").click(function (e) {
                e.preventDefault();
                $(".dropdown-menu").not($(this).next(".dropdown-menu")).slideUp();
                // Toggle the clicked dropdown
                $(this).next(".dropdown-menu").slideToggle();
            });



            // Remove active class from other dropdowns
            $(".dropdown > a").not(this).removeClass("active");
            $(".dropdown-menu").not($(this).next()).slideUp();

            // Toggle active class and slide menu
            $(this).toggleClass("active");
            $(this).next(".dropdown-menu").slideToggle();



            $("#logout").click(function () {

                Swal.fire({
                    title: "Are you sure you want to logout?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, Logout"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "../../Home/Logout";
                    }
                });


            });
        });

    </script>
    <script>
        function pNof(title, text) {
            new PNotify({
                title: title,
                text: text,
                shadow: true,
                addclass: 'stack-bottomright'
            });
        }

        function pNofsuc(title, text) {
            new PNotify({
                title: title,
                text: text,
                type: 'success',
                shadow: true,
                addclass: 'stack-bottomright'
            });
        }

        function pNoffail(title, text) {
            new PNotify({
                title: title,
                text: text,
                type: 'error',
                shadow: true,
                addclass: 'stack-bottomright'
            });
        }


    </script>


